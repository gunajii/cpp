#include <iostream>
using namespace std; 

class card_game {
public:
    int key, i, j;
    int n; 
    int *cards;
    void get_data();
    void sort();
    void display();
};

void card_game::get_data() {
    cout << "Enter size of hand: "; 
    cin >> n; 
    cards = new int[n]; 
    cout << "Enter cards in the hand: ";
    for (i = 0; i < n; i++) {
        cin >> cards[i];
    }
}

void card_game::sort() {
    for (i = 1; i < n; i++) { 
        key = cards[i];
        j = i - 1;
        while (j >= 0 && cards[j] > key) { 
            cards[j + 1] = cards[j];
            j = j - 1;
        }
        cards[j + 1] = key;
    }
}

void card_game::display() {
    cout << "Sorted hand is: ";
    for (i = 0; i < n; i++) {
        cout << cards[i] << " "; 
    }
    cout << endl;
}
int main() {
    card_game player;
    player.get_data();
    player.sort();
    player.display();
    return 0;
}
